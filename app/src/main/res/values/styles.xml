<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <!-- Toolbar theme. -->
    <style name="Theme.ToolbarTitle" parent="Widget.AppCompat.Toolbar">
        <!-- Customize your theme here. -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_toolbar</item>
    </style>


    <!-- Toolbar theme. -->
    <style name="StyleName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/list_text_color</item>
        <item name="android:textSize">@dimen/text_name</item>
    </style>


    <style name="StyleAuthor" parent="@style/StyleName">
        <item name="android:textSize">@dimen/text_author</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="StyleErrorTitle" parent="@style/StyleName">
        <item name="android:textSize">@dimen/text_error</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_error</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
    </style>


    <style name="StyleErrorMessage" parent="@style/StyleName">
        <item name="android:textSize">@dimen/text_author</item>
        <item name="android:textColor">@color/text_error_message</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">3</item>
    </style>






</resources>
